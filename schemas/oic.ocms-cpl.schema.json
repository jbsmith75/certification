{
  "id": "https://openconnectivityfoundation.github.io/certification/schemas/oic.ocms-cpl.schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description" : "Copyright (c) 2018 Open Connectivity Foundation, Inc. All rights reserved.",
  "title": "OCF Compliance Management System - Certified Products List",
  "definitions": {
    "ocms-cpl-sw-item": {
      "type": "object",
      "required": ["manufacturername","manufacturerianaid","model","swversion"],
      "properties": {
        "manufacturername": {
            "type":"string",
            "readOnly": true,
            "description": "Manufacturer's name"
        },
        "manufacturerianaid": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "IANAId"
        },
        "model": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "Model"
        },
        "swversion": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "Model version"
        }
      },
      "additionalProperties": false
    },
    "ocms-cpl-hw-item": {
      "type": "object",
      "required": ["manufacturername","manufacturerianaid","model","hwversion","fwversion"],
      "properties": {
        "manufacturername": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "Manufacturer's name"
        },
        "manufacturerianaid": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "IANAId"
        },
        "model": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "Model"
        },
        "hwversion": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "Hardware version"
        },
        "fwversion": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "Firmware version"
        }
      },
      "additionalProperties": false
    },
    "ocms-cpl-item":{
      "type": "object",
      "required": ["manufacturername","manufacturerianaid","models","versions","securityprofiles"],
      "properties": {
        "manufacturername": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "Manufacturer's name"
        },
        "manufacturerianaid": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "IANAId"
        },
        "models": {
            "type":"array",
            "readOnly": true,
            "description": "Model and Family Models supported",
            "items": {
                "type": "string",
                "maxLength": 64,
                "minItems": 1
            }
        },
        "versions": {
            "type":"array",
            "readOnly": true,
            "description": "Model version(s) supported",
            "items": {
                "type": "string",
                "maxLength": 64,
                "minItems": 1
            }
        },
        "ocfversions": {
            "type":"array",
            "readOnly": true,
            "description": "OCF Version(s) tested",
            "items": {
                "type": "string",
                "maxLength": 64,
                "minItems": 1
            }
        },
        "ocfdevtypes": {
            "type":"array",
            "readOnly": true,
            "description": "OCF Device Type(s) tested",
            "items": {
                "type": "string",
                "maxLength": 64,
                "minItems": 1
            }
        },
        "ocfvertical": {
            "type":"array",
            "readOnly": true,
            "description": "OCF Vertical(s) supported",
            "items": {
                "type": "string",
                "maxLength": 64,
                "minItems": 1
            }
        },
        "crsl": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "OCF Certification Requirements Status List"
        },
        "cpid": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "OCF Certified Product Identifier"
        },
        "certificationdate": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "Date of OCF Certification"
        },
        "certificationstatus": {
            "type":"string",
            "maxLength": 64,
            "readOnly": true,
            "description": "Status of OCF Certification, e.g. Passed, Revoked"
        },
        "ocfresourcetypes": {
            "type":"array",
            "readOnly": true,
            "description": "OCF Resource Type value(s)",
            "items": {
                "type": "string",
                "maxLength": 64,
                "minItems": 1
            }
        },
        "securityprofiles": {
            "type":"array",
            "readOnly": true,
            "description": "OCF Security Profile(s) tested",
            "items": {
                "type": "string",
                "minItems": 1
            }
        },
        "sw-containers": {
            "type":"array",
            "readOnly": true,
            "description": "Software dependencies/libraries used in OCF Certification",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/ocms-cpl-sw-item"
            }
        },
        "hw-containers": {
            "type":"array",
            "readOnly": true,
            "description": "Hardware dependencies/libraries used in OCF Certification",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/ocms-cpl-hw-item"
            }
        }
      },
      "additionalProperties": false
    },
    "oic.ocms-cpl": {
      "type": "object",
      "required": ["datecreated","currentocfrelease","cpl"],
      "properties": {
        "datecreated": {
          "type": "string",
          "maxLength": 64,
          "readOnly": true,
          "description": "Date this OCF Compliance Management System - Certified Products List (OCMS-CPL) was generated."
        },
        "currentocfrelease": {
          "type": "string",
          "maxLength": 64,
          "readOnly": true,
          "description": "Current release of OCF Specification."
        },
        "cpl": {
          "type": "array",
          "readOnly": true,
          "minItems": 1,
          "description": "List of Certified Products",
          "items": {
                "$ref": "#/definitions/ocms-cpl-item"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "allOf": [
    {"$ref": "#/definitions/oic.ocms-cpl"}
    ]
}
